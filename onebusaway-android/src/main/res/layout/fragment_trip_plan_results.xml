<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/option1LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/theme_primary"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/option1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/header_text_color" />

            <TextView
                android:id="@+id/option1Duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/header_text_faded_color" />

            <TextView
                android:id="@+id/option1Interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/header_text_faded_color" />

            <TextView
                android:id="@+id/option1Fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/header_text_faded_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option2LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/theme_primary"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/option2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/header_text_color" />

            <TextView
                android:id="@+id/option2Duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/header_text_faded_color" />

            <TextView
                android:id="@+id/option2Interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/header_text_faded_color" />

            <TextView
                android:id="@+id/option2Fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/header_text_faded_color" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/option3LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/theme_primary"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/option3Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/header_text_color" />

            <TextView
                android:id="@+id/option3Duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/header_text_faded_color" />

            <TextView
                android:id="@+id/option3Interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/header_text_faded_color" />

            <TextView
                android:id="@+id/option3Fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/header_text_faded_color" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_switch_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trip_results_tab_size">

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:icon="@drawable/ic_list"
            android:layout="@layout/tab_trip_results_view"
            android:text="@string/trip_plan_list_view" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:icon="@drawable/ic_arrivals_styleb_action_map"
            android:layout="@layout/tab_trip_results_view"
            android:text="@string/trip_plan_map_view" />

    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/directionsFrame"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/mapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ExpandableListView
            android:id="@+id/directionsListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/white"
            android:isScrollContainer="false" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_save_trip_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginLeft="@dimen/fab_margin1"
            android:layout_marginRight="@dimen/fab_margin1"
            android:layout_marginBottom="@dimen/fab_margin1"
            android:contentDescription="@string/tripplanner_save_trip"
            app:srcCompat="@drawable/ic_action_content_save" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/trip_result_banner_ad_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"/>
        <com.google.android.ads.nativetemplates.TemplateView
            android:id="@+id/trip_result_small_native_ad_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:gnt_template_type="@layout/gnt_small_template_view" />
    </LinearLayout>

</LinearLayout>
